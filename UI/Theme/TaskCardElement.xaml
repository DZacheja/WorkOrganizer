<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListViewItem" x:Key="TaskCardElement">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <StackPanel Orientation="Horizontal"
                                Margin="15"
                                x:Name="ElementContentPanel">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"
                                       Grid.ColumnSpan="2"
                            Text="{Binding Authors.Name}"
                                       FontWeight="Bold"
                                       FontSize="20"/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       FontSize="15"
                                       Margin="5,0,0,0"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Left"
                                       Foreground="White"
                                       Text="{Binding Component.Works.Name, StringFormat='Robota: {0}'}"/>

                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       FontSize="15"
                                       HorizontalAlignment="Left"
                                       Margin="5,0,5,0"
                                       Text="{Binding Component.WorkTypes.Name, StringFormat='Rodzaj: {0:dd-MM-yyyy}'}"
                                       Foreground="White"/>

                            <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       FontSize="15"
                                       HorizontalAlignment="Left"
                                       Margin="5,0,0,0"
                                       Text="{Binding Deadline, StringFormat='Termin: {0:dd-MM-yyyy}'}"
                                       Foreground="White"/>
                            <CheckBox Grid.Row="3"
                                      Margin="3"
                                      VerticalAlignment="Center"
                                      Background="Beige"
                                      IsChecked="{Binding Status}">
                                <CheckBox.Style>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="CheckBox.Visibility" Value="Visible"/>
                                        <Setter Property="CheckBox.IsEnabled" Value="False"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter Property="CheckBox.Visibility" Value="Collapsed"/>
                                            </Trigger>
                                            <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                                <Setter Property="CheckBox.IsEnabled" Value="True"/>
                                            </DataTrigger>
                                        </Style.Triggers>

                                    </Style>
                                </CheckBox.Style>
                            </CheckBox>
                            <Border Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    Background="{Binding Component.Works.ColorHTML}"
                                    CornerRadius="10"
                                    BorderThickness="2"
                                    BorderBrush="ForestGreen"
                                    Margin="20,0,0,0">
                                <StackPanel Orientation="Vertical"
                                            MaxWidth="700">
                                    <TextBlock VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="10,5,10,5"
                                           FontSize="25"
                                           TextWrapping="Wrap"
                                           Text="{Binding Content}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <StackPanel.Style>
                            <Style>
                                <Setter Property="StackPanel.Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource AncestorType=ListViewItem}}" Value="True">
                                        <Setter Property="StackPanel.Background" Value="#F2D6BD" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="True">
                <Setter Property="Opacity" Value="0.5"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>