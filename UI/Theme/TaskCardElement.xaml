<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListViewItem" x:Key="TaskCardElement">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <StackPanel Orientation="Horizontal"
                                Background="Transparent"
                                Margin="15">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"
                                       Grid.ColumnSpan="2"
                            Text="{Binding Authors.Name}"
                                       FontWeight="Bold"/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       FontSize="10"
                                       HorizontalAlignment="Right"
                                Text="Robota:"/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       FontSize="10"
                                       Margin="5,0,0,0"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Left"
                                       Text="{Binding Component.Works.Name}"
                                       Foreground="{Binding Component.Works.ColorHTML}"/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       FontSize="10"
                                       HorizontalAlignment="Right"
                                Text="Deadline:"/>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="3"
                                       FontSize="10"
                                       HorizontalAlignment="Left"
                                       Margin="5,0,0,0"
                                       Text="{Binding Deadline, StringFormat=dd-MM-yyyy}"
                                       Foreground="{Binding Component.Works.ColorHTML}"/>
                            
                            <CheckBox Grid.Row="3"
                                      Margin="3"
                                      VerticalAlignment="Center"
                                      Background="Beige"/>
                            <Border Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    Background="{Binding Component.Works.ColorHTML}"
                                    CornerRadius="10"
                                    BorderThickness="2"
                                    BorderBrush="ForestGreen"
                                    Margin="20,0,0,0">
                                <StackPanel Orientation="Vertical"
                                            MaxWidth="700">
                                    <TextBlock VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="5,0,5,0"
                                           FontSize="15"
                                           TextWrapping="Wrap"
                                           Text="{Binding Content}"/>

                                </StackPanel>
                            </Border>

                        </Grid>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>